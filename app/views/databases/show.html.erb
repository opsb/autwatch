<h1><%= link_to("#{@instance.name}", instance_url(@instance.id)) %><%= " > #{@database.name}" %></h1>
<%= link_to 'List', @database.list_url %>
<%= link_to 'Clear', instance_database_url(@instance.id, @database.name), :confirm => 'Are you sure?', :method => :delete %>
<h3>Stats</h3>
<table>
	<tr>
		<td>Documents</td>
		<td><%= @database.documents_count %></td>
	</tr>
	<tr>
		<td>Sections</td>
		<td><%= @database.sections %></td>
	</tr>
</table>

<h3>Actions Reference</h3>
<table>
	<tbody>
		<tr>
			<td>idx</td>
			<td><%=h @database.document_idx_url %></td>
		</tr>
		<tr>
			<td>delete doc</td>
			<td><%=h @database.delete_doc_url %></td>
		</tr>
	</tbody>
</table>

<% form_tag "#{@database.name}/documents", :method => "get" do -%>
	<%= label_tag 'ids' %>
	<%= text_field_tag 'ids' %>
	<%= submit_tag 'Show' %>
<% end %>

<% if false %>
<% @database.documents.each do |document| %>
	<h3><%=h document.title %></h3>
	<p><%=h document.content %></p>
<% end %>
<% end %>